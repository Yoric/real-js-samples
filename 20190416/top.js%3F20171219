    [20, 19, 18, 17, 16,  3,  2,  1,  0, 23, 22, 21],
    [21, 20, 19, 18, 17,  4,  3,  2,  1,  0, 23, 22],
    [22, 21, 20, 19, 18,  5,  4,  3,  2,  1,  0, 23],
    [23, 22, 21, 20, 19,  6,  5,  4,  3,  2,  1,  0],
