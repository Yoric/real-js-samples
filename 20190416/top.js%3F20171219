    [ 9,  8,  7,  6,  5, 16, 15, 14, 13, 12, 11, 10],
    [10,  9,  8,  7,  6, 17, 16, 15, 14, 13, 12, 11],
    [11, 10,  9,  8,  7, 18, 17, 16, 15, 14, 13, 12],
    [12, 11, 10,  9,  8, 19, 18, 17, 16, 15, 14, 13],
    [13, 12, 11, 10,  9, 20, 19, 18, 17, 16, 15, 14],
    [14, 13, 12, 11, 10, 21, 20, 19, 18, 17, 16, 15],
    [15, 14, 13, 12, 11, 22, 21, 20, 19, 18, 17, 16],
    [16, 15, 14, 13, 12, 23, 22, 21, 20, 19, 18, 17],
