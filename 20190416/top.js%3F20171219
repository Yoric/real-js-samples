$(function(){
  // 年月
  var now = new Date()
  var year = now.getFullYear()
  var month = now.getMonth() + 1
  var day = now.getDate()
  if (day >= 24) {
    if (month == 12) {
      year += 1
      month = 1
    } else {
      month += 1
    }
  }

  function create_year_html(prefix) {
    // 年の画像のpathの配列を返す
    var file_names = year.toString(10).split('')
    var html = ''

    for (var i = 0, len = file_names.length; i < len; i++) {
      html += create_img(prefix, file_names[i])
    }

    return html
  }

  function create_img(prefix, file_index) {
    var src = "img/" + prefix + file_index + ".png"
    var alt = file_index.toString()
    return '<img src="' + src + '" alt="' + alt +'"/>'
  }

  function get_prefix(size) {
    switch (size) {
      case 'small':
        return 'free_menu_month_'
      case 'big':
        return 'kakioroshi_month_'
      default:
        break;
    }
  }

  // 年の画像差し替え
  $('[data-replace-year="true"]').each(function() {
    var prefix = get_prefix($(this).attr('data-year-size'))
    var html = create_year_html(prefix)

    $(this).html(html)
  })

  // 月の画像差し替え
  $('[data-replace-month="true"]').each(function() {
    var prefix = get_prefix($(this).attr('data-month-size'))
    var html = create_img(prefix, month)

    $(this).html(html)
  })

  // 無料占い
  $("#free_submit").click(function(){
    var eto = $("#free_eto_select").val()
    var seiza = $("#free_seiza_select").val()

    if (eto == -1 && seiza == -1) {
      alert('干支と星座を選択してください')
      return false
    }
    if (eto == -1) {
      alert('干支を選択してください')
      return false
    }
    if (seiza == -1) {
      alert('星座を選択してください')
      return false
    }

    fortune_free()

    $("#free_input_div").hide()
    $("#free_result_div").show()

    var bid="2142709682";
    var r=Math.random();
    $("body").append("<img alt=\"Yahoo Image\" width=1 height=1 border=0 src=\"https://pclick.yahoo.co.jp/p/s="+bid+"/lng=jp/rand="+r+"\">");
  });

  // ログイン特典
  var yLogin = $('#yLogin').val();
  if (yLogin == '<YAHOO_IS_LOGIN>') {
    yLogin = 1
  }
  if (yLogin == 0) {
    var url = 'https://login.yahoo.co.jp/config/login?.src=fortune&lg=jp&.intl=jp&.done=' + encodeURIComponent(location.href);
    $('#yahoo_login_link').attr('href', url);
    $("#login_form_div").show()
    $("#login_input_div").hide()
  } else {
    $("#login_form_div").hide()
    $("#login_input_div").show()
  }

  $("#login_submit").click(function(){
    var seiza = $("#login_seiza_select").val()

    if (seiza == -1) {
      alert('星座を選択してください')
      return false
    }

    fortune_eve()

    $("#login_input_div").hide()
    $("#login_result_div").show()

    var bid="2142709684";
    var r=Math.random();
    $("body").append("<img alt=\"Yahoo Image\" width=1 height=1 border=0 src=\"https://pclick.yahoo.co.jp/p/s="+bid+"/lng=jp/rand="+r+"\">");
  });
});

